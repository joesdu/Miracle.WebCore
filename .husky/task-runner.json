{
	"tasks": [
		{
			"name": "Formate Code",
			"output": "always",
			"command": "bash",
			"args": [
				"dotnet format './*.sln'",
				"--include",
				"${staged}"
			],
			"include": [
				"**/*.cs",
				"**/*.vb"
			],
			"windows": {
				"command": "pwsh",
				"args": [
					"/c",
					"dotnet format './Miracle.WebCore.sln'"
				]
			}
		},
		{
			"name": "Welcome",
			"output": "always",
			"command": "bash",
			"args": [
				"-c",
				"echo Husky.Net is awesome!"
			],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"echo Husky.Net is awesome!"
				]
			}
		}
	]
}